{
  "name": "sm-api",
  "version": "1.0.0",
  "description": "API for delivering our Supermanager ACB's private league data to the frontend",
  "main": "app/app.js",
  "scripts": {
    "dev": "SM_ENV=dev nodemon app/app.js --exec \"npm run eslint && node\"",
    "docs": "aglio --theme-variables flatly -i documentation.md -o app/views/docs.html",
    "eslint": "eslint app/**",
    "start": "SM_ENV=prod node app/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brebaje/sm-api.git"
  },
  "keywords": [
    "api",
    "supermanager",
    "acb",
    "backend",
    "nodejs",
    "javascript",
    "express",
    "mongodb"
  ],
  "author": "Manuel Bravo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brebaje/sm-api/issues"
  },
  "homepage": "https://github.com/brebaje/sm-api#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "express": "^4.14.1",
    "moment": "^2.17.1",
    "mongodb": "^3.1.13"
  },
  "devDependencies": {
    "aglio": "^2.3.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "nodemon": "^1.11.0"
  }
}
